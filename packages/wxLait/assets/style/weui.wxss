.weui-grid__icon {
  width: 100%;
  height: 80px;
  margin-bottom: 10px;
  /* margin: 10 auto; */
}

.weui-grid__icon image {
  display: block;
  width: 95%;
  height: 80px;
  /* margin-bottom: 10px; */
  border-radius: 14rpx;
}

.weui-grid__icon + .weui-grid__label {
  margin-top: 5px;
}

.weui-grid__label {
  display: block;
  text-align: center;
  /* color: #000; */
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
