/* pages/commend/search/index.wxss */

.search-p{
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  background: white;
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
  align-items: center;

}
.input-search {
  margin: 15rpx;
  height: 35px;
  text-align:left;
  background-color: #f5f5f7;
  padding-left: 10px;
  padding-right: 10px;
  border-radius: 20px;
  border: 1px solid #f0f0f0;
  flex: 1;
  font-size: 14px;
}
.img-search{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25px;
  height: 25px;
  flex-direction: row;
  vertical-align: middle;
  margin-right: 15rpx;
}

.list-top{
  padding-top: 50px;
  height: 1px;
}
 