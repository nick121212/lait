/* pages/welcome/index.wxss */

.container {
  display: block;
}

page {
  background-color: #37adff;
}

.view-top {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img-banner {
  width: 100%;
  height: 150px;
}

.go-next {
  position: fixed;
  color: white;
  size: 14px;
  right: 0;
  bottom: 0;
  margin-bottom: 20px;
  margin-right: 20px;
}

/*tag */

.tag-selected {
  font-size: 14px;
  color: white;
  font-weight: bold;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 8px;
  padding-bottom: 8px;
  background-color: #5accff;
  border-radius: 20px;
}

.item-text {
  text-align: center;
  justify-content: center;
}

.tag-normal {
  font-size: 14px;
  color: white;
  background-color: transparent;
  border: 1px solid white;
  border-radius: 20px;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 8px;
  padding-bottom: 8px;
}
